# Environment variables for Docker setup
# Copy this file to .docker.env and fill in the actual values
PORT="application port"
BASE_URL="application base url"
DATABASE_URL="postgresql://<database-user>:<database-password>@<database-host-in-docker-network>:<database-port>/<database-name>?schema=public"
JWT_SECRET="your-jwt-secret"
REDIS_HOST="redis-host-in-docker-network"
REDIS_PORT="redis-port"

# Brevo SMTP
BREVO_SERVER = "brevo-smtp-server"
BREVO_PORT = "brevo-smtp-port"
BREVO_USERNAME = "brevo-smtp-username"
BREVO_PASSWORD = "brevo-smtp-password"
BREVO_EMAIL = "brevo-smtp-email"